generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  username    String
  phoneNumber String?
  password    String
  searchHistory Search[]
}

model Search {
  id       Int    @id @default(autoincrement())
  user     User   @relation(fields: [userId],references: [id])
  userId   Int
  data     String
  createdAt  DateTime @default(now())
}